{
  "name": "on_ruby",
  "scripts": {
    "postdeploy": "bin/rails db:schema:load db:migrate db:seed"
  },
  "env": {
    "RACK_ENV": {
      "required": true
    },
    "RAILS_ENV": {
      "required": true
    },
    "HOR_API_KEY": {
      "required": true
    },
    "SECRET_TOKEN": {
      "required": true
    }
  },
  "addons": [
    "heroku-postgresql",
    "papertrail"
  ],
  "buildpacks": [
    {
      "url": "urn:buildpack:heroku/ruby"
    }
  ]
}
